package kr.ac.itschool.calculator;

import java.awt.BorderLayout;
import java.awt.event.ActionListener;
import java.awt.Container;
import java.awt.Dimension;
import java.awt.Font;
import java.awt.GridLayout;

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;


public class CalDemoMain {

	public static void main(String[] args) {
	
    JFrame frame=new JFrame("Calculator Js2 Program");
    frame.setLocation(400,300);
    frame.setPreferredSize(new Dimension(200,250));
    Container contentPane=frame.getContentPane();
    Font font =new Font("바탕체",Font.BOLD,25);
    
    JPanel panel=new JPanel();
    JTextField text=new JTextField(300);
    JTextField text2=new JTextField(300);
    text.setHorizontalAlignment(text.RIGHT); 
    text2.setHorizontalAlignment(text2.RIGHT); 
    text.setFont(font);
    text2.setFont(font);
    text.setEditable(false);
    text2.setEditable(false);
    panel.add(text);
    panel.add(text2);
   BoxLayout boxlayout=new BoxLayout(panel,BoxLayout.Y_AXIS);
   panel.setLayout(boxlayout);
   
    GridLayout layout= new GridLayout( 4,4);
    JPanel panel2=new JPanel();
    panel2.setLayout(layout);
    JButton button1=new JButton("1");
    JButton button2=new JButton("2");
    JButton button3=new JButton("3");
    JButton button4=new JButton("4");
    JButton button5=new JButton("5");
    JButton button6=new JButton("6");
    JButton button7=new JButton("7");
    JButton button8=new JButton("8");
    JButton button9=new JButton("9");
    JButton button0=new JButton("0");
    JButton button11=new JButton("+");
    JButton button12=new JButton("-");
    JButton button13=new JButton("*");
    JButton button14=new JButton("/");
    JButton button15=new JButton("C");
    JButton button16=new JButton("=");
    panel2.add(button1);
    panel2.add(button2);
    panel2.add(button3);
    panel2.add(button11);
    panel2.add(button4);
    panel2.add(button5);
    panel2.add(button6);
    panel2.add(button12);
    panel2.add(button7);
    panel2.add(button8);
    panel2.add(button9);
    panel2.add(button13);
    panel2.add(button15);
    panel2.add(button0);
    panel2.add(button16);
    panel2.add(button14);
    
    contentPane.add(panel,BorderLayout.NORTH);
    contentPane.add(panel2,BorderLayout.CENTER);
 
    ActionListener listener= new CalDemo(text,text2,button1,
          button2,button3,button4,button5,button6,
          button7,button8,button9,button0,button11,
          button12,button13,button14,button15,button16);

    button1.addActionListener(listener);
    button2.addActionListener(listener);
    button3.addActionListener(listener);
    button4.addActionListener(listener);
    button5.addActionListener(listener);
    button6.addActionListener(listener);
    button7.addActionListener(listener);
    button8.addActionListener(listener);
    button9.addActionListener(listener);
    button0.addActionListener(listener);
    button11.addActionListener(listener);
    button12.addActionListener(listener);
    button13.addActionListener(listener);
    button14.addActionListener(listener);
    button15.addActionListener(listener);
    button16.addActionListener(listener);
      
   
    
    frame.pack();
    frame.setVisible(true);
	}
}
